{
  "compilerOptions": {
    "lib": [
      "es2015.promise",
      "es5",
      "es6",
      "es2017.object",
      "ES2018.Regexp",
      "es2019",
      "ES2020.String",
      "ES2020.Promise",
      "DOM"
    ],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@typedorm/*": [
        "packages/*",

        "bazel-out/x64_windows-fastbuild/bin/packages/*",
        "bazel-out/x64_windows-dbg/bin/packages/*",
        "bazel-out/k8-fastbuild/bin/packages/*",
        "bazel-out/k8-dbg/bin/packages/*",
        "bazel-out/host/bin/packages/*",
        "bazel-out/darwin-fastbuild/bin/packages/*",
        "bazel-out/darwin-dbg/bin/packages/*",

        "bazel-out/x64_windows-fastbuild/bin/packages/*/cjs",
        "bazel-out/x64_windows-dbg/bin/packages/*/cjs",
        "bazel-out/k8-fastbuild/bin/packages/*/cjs",
        "bazel-out/k8-dbg/bin/packages/*/cjs",
        "bazel-out/host/bin/packages/*/cjs",
        "bazel-out/darwin-fastbuild/bin/packages/*/cjs",
        "bazel-out/darwin-dbg/bin/packages/*/cjs",

        "bazel-out/x64_windows-fastbuild/bin/packages/*/esm",
        "bazel-out/x64_windows-dbg/bin/packages/*/esm",
        "bazel-out/k8-fastbuild/bin/packages/*/esm",
        "bazel-out/k8-dbg/bin/packages/*/esm",
        "bazel-out/host/bin/packages/*/esm",
        "bazel-out/darwin-fastbuild/bin/packages/*/esm",
        "bazel-out/darwin-dbg/bin/packages/*/esm"
      ],
      "@typedorm-example/*": [
        "examples/*",

        "bazel-out/x64_windows-fastbuild/bin/examples/*",
        "bazel-out/x64_windows-dbg/bin/examples/*",
        "bazel-out/k8-fastbuild/bin/examples/*",
        "bazel-out/k8-dbg/bin/examples/*",
        "bazel-out/host/bin/examples/*",
        "bazel-out/darwin-fastbuild/bin/examples/*",
        "bazel-out/darwin-dbg/bin/examples/*",

        "bazel-out/x64_windows-fastbuild/bin/examples/*/cjs",
        "bazel-out/x64_windows-dbg/bin/examples/*/cjs",
        "bazel-out/k8-fastbuild/bin/examples/*/cjs",
        "bazel-out/k8-dbg/bin/examples/*/cjs",
        "bazel-out/host/bin/examples/*/cjs",
        "bazel-out/darwin-fastbuild/bin/examples/*/cjs",
        "bazel-out/darwin-dbg/bin/examples/*/cjs",

        "bazel-out/x64_windows-fastbuild/bin/examples/*/esm",
        "bazel-out/x64_windows-dbg/bin/examples/*/esm",
        "bazel-out/k8-fastbuild/bin/examples/*/esm",
        "bazel-out/k8-dbg/bin/examples/*/esm",
        "bazel-out/host/bin/examples/*/esm",
        "bazel-out/darwin-fastbuild/bin/examples/*/esm",
        "bazel-out/darwin-dbg/bin/examples/*/esm"
      ]
    },
    "rootDirs": [
      ".",
      "bazel-out/x64_windows-fastbuild/bin/*",
      "bazel-out/x64_windows-dbg/bin/*",
      "bazel-out/k8-fastbuild/bin/*",
      "bazel-out/k8-dbg/bin/*",
      "bazel-out/host/bin/*",
      "bazel-out/darwin-fastbuild/bin/*",
      "bazel-out/darwin-dbg/bin/*"
    ]
  },
  "exclude": ["dist", "node_modules", "tools"]
}
